table
  background WHITE
  color COLOR
  border 0.1em solid lighten(COLOR, 75%)

  th
    background-color: lighten(COLOR, 50%)
    color: WHITE
    &.success
      background-color SUCCESS
    &.alert
      background-color ALERT
    &.caution
      background-color CAUTION
    [data-filter]
      cursor pointer
  tbody
    tr
      cursor pointer
      &:not(.selected):nth-child(even) td
        background-color: lighten(COLOR, 95%)
      &.selected
        color lighten(COLOR, 75%)
        background-color: lighten(DARK, 30%)
    td
      vertical-align middle
      &.highlight
        background-color: THEME !important
        color: WHITE
    
      span
        &.icon
          font-size 32px
          text-align center
          display block
          &.success
            color white
            background-color SUCCESS
          &.alert
            color white
            background-color ALERT
          &.caution
            color white
            background-color CAUTION