.background-image
  background-repeat no-repeat
  background-size cover
  background-position center

.no-margin
  margin 0 !important
.no-margin-left
  margin-left 0 !important
.no-margin-right
  margin-right 0 !important
.no-margin-top
  margin-top 0 !important
.no-margin-bottom
  margin-bottom 0 !important

.padding
  padding AIR !important

.no-padding
  padding 0 !important
.no-padding-left
  padding-left 0 !important
.no-padding-right
  padding-right 0 !important
.no-padding-top
  padding-top 0 !important
.no-padding-bottom
  padding-bottom 0 !important

.border
  border BORDER-HEIGHT solid THEME
.border-bottom
  border-bottom BORDER-HEIGHT solid THEME
.border-top
  border-top BORDER-HEIGHT solid THEME
.border-right
  border-right BORDER-HEIGHT solid THEME
.border-left
  border-left BORDER-HEIGHT solid THEME

.float-right
  float right
.float-left
  float left

.hideable
  transition all ease TRANSITION
  &:not(.active)
    &.to-left
      margin-left -100%
    &.to-right
      margin-right -100%
    &.to-top
      margin-top -100%
    &.to-bottom
      margin-bottom -100%

img
  &.thumbnail
    width 45px

.middle
  vertical-align middle

.absolute
  position absolute

.fixed
  position fixed

.full-width
  width 100% !important
.full-height
  height 100% !important
