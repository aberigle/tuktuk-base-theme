body
  color: COLOR
  background: WHITE
  font-size: 15px
  font-family: "Lato", "Helvetica Neue", Helvetica, sans-serif
  font-weight: 300
  letter-spacing: -0.05em

  &:not(.color):not(.dark) a
    color: COLOR
    &:not(.button):hover//, &:not(.button):active
      color: THEME

  .row
    max-width 100%
  
  hr
    margin: 15px 0
    background: LIGHT
    background-color: rgba(0,0,0,0.1)

  .radius
    border-radius: BORDER-RADIUS

  .thumb
    box-shadow 0px 0px 2px DARK
    transition all ease TRANSITION
    &.selected
      box-shadow 0px 0px 20px THEME
  strong
    font-weight: 700 !important

  /* ====================== BACKGROUNDS ====================== */
  .bck
    &.light
      background-color: LIGHT
    &.color
      background-color: COLOR
    &.dark
      background-color: DARK
    &.theme
      background-color: THEME
    &.alert
      background-color: ALERT !important

    &.theme, &.alert
      color: WHITE

    &.color, &.dark
      color: lighten(COLOR, 75%)
      hr
        background: lighten(COLOR, 10%)
        background: rgba(0,0,0,0.2)
      a
        color: WHITE
        &.active
          color: WHITE !important


  /* ================================= TEXT ================================ */
  .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)

  .color
    &.white
      color: WHITE !important
    &.theme
      color: THEME !important
    &.default
      color: COLOR !important

  div.img
    background: LIGHT

  :not(.icon).tag
    color: WHITE !important
    border: solid 1px rgba(0,0,0,0.1)
    border-radius 2px